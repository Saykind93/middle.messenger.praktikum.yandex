<main>
  <div class="container">
    <div class="avatar-wrapper">
      <div class="avatar">
      </div>
      <form class="validate-avatar-form" id="formchangeavatar">
        {{{inputavatar}}}
        {{{buttonavatar}}}
      </form>

    </div>

    <div class="form-wrapper">
      <form class="validate-form" id="changeregistryform">
        <div class="inputs">
          <div class="left-inputs">
            {{{inputfirstname}}}
            {{{inputlogin}}}
            {{{inputemail}}}
          </div>
          <div class="right-inputs">
            {{{inputsecondname}}}
            {{{inputdisplayname}}}
            {{{inputphone}}}

          </div>

        </div>
        {{{button}}}

      </form>

      <form class="validate-password-form" id="changepasswordform">
        {{{inputoldpassword}}}
        {{{inputnewpassword}}}
        {{{buttonchangepassword}}}

      </form>
    </div>

  </div>
</main>
