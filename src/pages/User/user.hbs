<main>
  <div class="container">
    <div class="avatar-wrapper">
      {{#if props.isAvatar}}
        <img class="avatar" src={{props.avatar}} width="450" height="450" alt="">
        {{else}}
        <div class="avatar" width="450" height="450">Аватар отсутствует</div>
        {{/if}}
      <form id="change-avatar-form" class="form-wrapper" >
      <input id="avatar" type="file" name="avatar" accept="image/*">
        {{{buttonavatar}}}
      </form>

    </div>

    <div class="form-wrapper">
      <form id="change-registry-form" class="form-wrapper" >
        <div class="inputs">
          <div class="left-inputs">
            {{{inputfirstname}}}
            {{{inputlogin}}}
            {{{inputemail}}}
          </div>
          <div class="right-inputs">
            {{{inputsecondname}}}
            {{{inputdisplayname}}}
            {{{inputphone}}}

          </div>

        </div>
        {{{button}}}

      </form>

      <form id="change-password-form" class="form-wrapper" >
        {{{inputoldpassword}}}
        {{{inputnewpassword}}}
        {{{buttonchangepassword}}}

      </form>
    </div>

  </div>
  <div id="error"></div>
</main>
