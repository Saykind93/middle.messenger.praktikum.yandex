<head>
  <title>Кабинет пользователя</title>
  <link rel="stylesheet" href="./user.css" />

</head>

<main>
  <div class="container">
    <div class="avatar-wrapper">
      <div class="avatar">
      </div>
      <form class="validate-avatar-form">
        <input class="val-input" type="text" name="avatar" />
        <button class="val-btn"><a href="./../User/user.hbs">Изменить пароль</a></button>

      </form>

    </div>

    <div class="form-wrapper">
      <form class="validate-form">
        <div class="inputs">
          <div class="left-inputs">
            <input class="val-input" type="text" name="first_name" />
            <input class="val-input" type="text" name="login" />
            <input class="val-input" type="text" name="email" />
          </div>
          <div class="right-inputs">
            <input class="val-input" type="text" name="second_name" />
            <input class="val-input" type="text" name="display_name" />
            <input class="val-input" type="text" name="phone" />

          </div>

        </div>
{{> button name="Изменить данные" textlink="./../Error404/error404.hbs"}}

      </form>

      <form class="validate-password-form">
        <input class="val-input" type="text" name="oldPassword" />
        <input class="val-input" type="text" name="newPassword" />
{{> button name="Изменить пароль" textlink="./../Chats/chats.hbs"}}

      </form>
    </div>

  </div>
</main>
